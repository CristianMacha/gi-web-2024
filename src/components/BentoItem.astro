---
import Image from "astro/components/Image.astro";

interface Props {
    title: string;
    urlSource: string;
}

const { title, urlSource } = Astro.props;
---

<div class="rounded-3xl relative h-[500px] md:h-[960px] w-screen md:w-full">
    <Image
        src={urlSource}
        width={100}
        height={100}
        class="w-screen h-[500px] md:w-full md:h-full rounded-3xl"
        style="object-fit: cover;"
        alt={title}
    />
    <!-- <video src={urlVideo} autoplay loop class="w-full h-full rounded-3xl" style="object-fit: cover;"></video> -->
    <div class="sticky bottom-0 py-4 px-4 -mt-16">
        <p class="text-2xl text-white">{title}</p>
    </div>
</div>
