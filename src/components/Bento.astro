---
import BentoItem from "./BentoItem.astro";
import BentoItemWithVideo from "./BentoItemWithVideo.astro";

const graniteUrlSource = "/images/GRANITE.jpg";
const quartzUrlSource = "/images/3Z0HCI1ER5eS_8zq79o_LQ.webp";
---

<div class="bg-[#b488f1] px-10 py-40">
  <div class="flex flex-col gap-8">
    <BentoItemWithVideo
      video="https://firebasestorage.googleapis.com/v0/b/giv2-6c2ea.appspot.com/o/gi%2FBORRADOR.mp4?alt=media&token=38cf0da2-215e-4ea6-8b0d-8e11d34470aa"
      image="/images/FONDO.webp"
    />
    <div class="flex flex-row gap-48 justify-center items-center">
      <BentoItem title="Granite" urlSource={graniteUrlSource} />
      <BentoItem title="Quartz" urlSource={quartzUrlSource} />
    </div>
    <BentoItemWithVideo
      video="https://firebasestorage.googleapis.com/v0/b/giv2-6c2ea.appspot.com/o/gi%2FBORRADOR.mp4?alt=media&token=38cf0da2-215e-4ea6-8b0d-8e11d34470aa"
      image="/images/uDyO-aqHSjiZ4uZ-TEBjKA.webp"
    />
  </div>
</div>
